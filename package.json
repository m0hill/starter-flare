{
  "name": "starter-flare",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "build:staging": "CLOUDFLARE_ENV=staging react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "deploy:staging": "pnpm run build:staging && wrangler deploy",
    "preview": "pnpm run build && vite preview",
    "preview:staging": "pnpm run build:staging && vite preview",
    "cf-typegen": "wrangler types",
    "typecheck": "pnpm run cf-typegen && react-router typegen && tsc -b",
    "format": "biome check --write .",
    "lint": "biome lint .",
    "db:schema": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply db-flare --local",
    "db:migrate:staging": "wrangler d1 migrations apply db-flare-staging --env staging --remote",
    "db:migrate": "wrangler d1 migrations apply db-flare --remote",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "better-auth": "^1.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.6.12",
    "isbot": "^5.1.22",
    "lucide-react": "^0.487.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.54.2",
    "react-router": "^7.5.1",
    "remix-themes": "^2.0.4",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "util": "^0.12.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vite-plugin": "^1.0.8",
    "@react-router/dev": "^7.5.1",
    "@react-router/fs-routes": "^7.0.0",
    "@tailwindcss/vite": "^4.0.6",
    "@types/node": "^22.10.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "better-sqlite3": "^11.6.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.30.6",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.3",
    "vite": "^6.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.12.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "biome check --write ."
  }
}
